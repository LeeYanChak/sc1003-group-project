directory = "records.csv"

def extract_student_info(file_location):
    student_records = []

    with open(file_location, 'r') as csvfile:
        for lines in csvfile:
            student_info = lines.strip("\n").split(",")
            student_records.append(student_info)
    return student_records


student_records = extract_student_info(directory)
print(student_records[0])

